# ansible/templates/traefik_docker_compose.yml.j2
services:
  proxy:
    image: traefik:v2.10.7
    container_name: traefik
    restart: unless-stopped
    ports:
      - "${HTTP_PORT}:80"
{% if use_https | default(true) %}
      - "443:443"
{% endif %}
      - "8090:8080"  # Dashboard on different external port, testing now
    labels:
      - "traefik.enable=false"
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock:ro
      - ./config/traefik.${HOSTNAME}.yml:/etc/traefik/traefik.yml:ro
      - ./config/acme.json:/acme.json
      - traefik_logs:/var/log/traefik

volumes:
  traefik_logs:

networks:
  default:
    name: pygeoapi-network
    external: true
