services:

  pygeoapi_cite:

    image: geopython/pygeoapi_cite:latest

    build: ./pygeoapi

    container_name: pygeoapi_cite

    restart: unless-stopped

    expose:
      - "80"

#    ports:
#      - "5000:80"

    environment:
     - SCRIPT_NAME=/cite

    labels:
      - "traefik.enable=true"

      # HTTP router
      - "traefik.http.routers.pygeoapi-cite.rule=Host(`{{ domain }}`) && PathPrefix(`/cite`)"
      - "traefik.http.routers.pygeoapi-cite.entrypoints=web"
      - "traefik.http.routers.pygeoapi-cite.priority=100"

{% if use_https | default(true) %}
      # HTTPS router (SSL enabled)
      - "traefik.http.routers.pygeoapi-cite-secure.rule=Host(`{{ domain }}`) && PathPrefix(`/cite`)"
      - "traefik.http.routers.pygeoapi-cite-secure.entrypoints=websecure"
      - "traefik.http.routers.pygeoapi-cite-secure.tls=true"
      - "traefik.http.routers.pygeoapi-cite-secure.tls.certresolver=letsencrypt"
      - "traefik.http.routers.pygeoapi-cite-secure.priority=100"
{% endif %}

      # Service configuration
      - "traefik.http.services.pygeoapi-cite.loadbalancer.server.port=80"

networks:
  default:
    name: pygeoapi-network
    external: true