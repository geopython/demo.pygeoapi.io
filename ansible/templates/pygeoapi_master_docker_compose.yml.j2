# pygeoapi_master Docker Compose Template
# File: ansible/templates/pygeoapi_master_docker_compose.yml.j2
services:
  pygeoapi_master:
    image: geopython/pygeoapi_master:latest
    container_name: pygeoapi_master
    restart: unless-stopped

    expose:
      - "80"

    environment:
      - SCRIPT_NAME=/master

    # Traefik v2.x labels with dynamic domain
    labels:
      - "traefik.enable=true"
      
      # HTTP router
      - "traefik.http.routers.pygeoapi-master.rule=Host(`{{ domain }}`) && PathPrefix(`/master`)"
      - "traefik.http.routers.pygeoapi-master.entrypoints=web"
      - "traefik.http.routers.pygeoapi-master.priority=100"
      
{% if use_https | default(true) %}
      # HTTPS router (SSL enabled)
      - "traefik.http.routers.pygeoapi-master-secure.rule=Host(`{{ domain }}`) && PathPrefix(`/master`)"
      - "traefik.http.routers.pygeoapi-master-secure.entrypoints=websecure"
      - "traefik.http.routers.pygeoapi-master-secure.tls=true"
      - "traefik.http.routers.pygeoapi-master-secure.tls.certresolver=letsencrypt"
      - "traefik.http.routers.pygeoapi-master-secure.priority=100"
{% endif %}
      
      # Service configuration
      - "traefik.http.services.pygeoapi-master.loadbalancer.server.port=80"

networks:
  default:
    name: pygeoapi-network
    external: true