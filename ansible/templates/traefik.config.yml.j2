# Traefik 2.x configuration for {{ domain }}
# Generated by Ansible from template

# API and dashboard configuration
api:
  dashboard: false
  insecure: false

# Entry points
entryPoints:
  web:
    address: ":80"
{% if use_https | default(true) %}
    http:
      redirections:
        entryPoint:
          to: websecure
          scheme: https
{% endif %}

{% if use_https | default(true) %}
  websecure:
    address: ":443"
{% endif %}

# Providers
providers:
  docker:
    endpoint: "unix:///var/run/docker.sock"
    exposedByDefault: false
    network: "pygeoapi-network"
{% if domain.split('.') | length > 1 %}
    defaultRule: "Host(`{{ domain }}`)"
{% endif %}

{% if use_https | default(true) %}
# Certificate resolvers
certificatesResolvers:
  letsencrypt:
    acme:
      email: "{{ my_email }}"
      storage: "/acme.json"
      tlsChallenge: {}
      # Optionally add specific domains
      # domains:
      #   - main: "{{ domain }}"
{% endif %}

# Logging
log:
  level: INFO

accessLog:
  filePath: "/var/log/traefik/access.log"
