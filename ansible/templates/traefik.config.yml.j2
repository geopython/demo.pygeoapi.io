# Traefik 2.x configuration for {{ domain }}
# Generated by Ansible from template
# ansible/templates/traefik.config.yml.j2

# API and dashboard configuration
api:
  dashboard: {{ traefik_dashboard | default(false) | lower }}
  insecure: {{ traefik_dashboard_insecure | default(false) | lower }}

# Entry points
entryPoints:
  web:
    address: ":80"
{% if use_https | default(true) %}
    http:
      redirections:
        entryPoint:
          to: websecure
          scheme: https
  websecure:
    address: ":443"
{% endif %}

# Providers
providers:
  docker:
    endpoint: "unix:///var/run/docker.sock"
    exposedByDefault: false
    network: "pygeoapi-network"
    watch: true
{% if domain.split('.') | length > 1 %}
    defaultRule: "Host(`{{ domain }}`)"
{% endif %}

{% if use_https | default(true) %}
# Certificate resolvers (Let's Encrypt)
certificatesResolvers:
  letsencrypt:
    acme:
      email: "{{ letsencrypt_email | default(my_email) }}"
      storage: "/acme.json"
      keyType: EC256
      tlsChallenge: {}
      # Optional: specify domains explicitly
      # domains:
      #   - main: "{{ domain }}"
{% endif %}

# Logging
log:
  level: {{ traefik_log_level | default('INFO') }}
  filePath: /var/log/traefik/traefik.log

accessLog:
  filePath: /var/log/traefik/access.log

# Global configuration
global:
  checkNewVersion: false
  sendAnonymousUsage: false

# Optional: HTTP middlewares for security
http:
  middlewares:
{% if use_https | default(true) %}
    # Redirect HTTP to HTTPS
    redirect-to-https:
      redirectScheme:
        scheme: https
        permanent: true
{% endif %}
    
    # Security headers
    security-headers:
      headers:
        frameDeny: true
        sslRedirect: {{ use_https | default(true) | lower }}
        browserXssFilter: true
        contentTypeNosniff: true
        forceSTSHeader: {{ use_https | default(true) | lower }}
        stsIncludeSubdomains: {{ use_https | default(true) | lower }}
        stsPreload: {{ use_https | default(true) | lower }}
        stsSeconds: 31536000
        customFrameOptionsValue: "SAMEORIGIN"